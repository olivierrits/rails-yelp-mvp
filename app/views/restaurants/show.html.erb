<h1> <%= @restaurant.name %></h1>
<table>
  <tr>
    <th>Address:</th>
    <td><%= @restaurant.address %></td>
  </tr>
  <tr>
    <th>Phone:</th>
    <td><%= @restaurant.phone_number %></td>
  </tr>
  <tr>
    <th>Category:</th>
    <td><%= @restaurant.category %></td>
  </tr>
  <tr>
    <th>Rating</th>
    <td><%= "*" * 3 %></td>
  </tr>
</table>

<div id="footer">
  <p btn-menu><%= link_to "Back to overview", restaurants_path %></p>
</div>
